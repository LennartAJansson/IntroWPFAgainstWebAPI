<Window x:Class="WPFMultiVM.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFMultiVM.Views"
        mc:Ignorable="d"
        DataContext="{Binding Source={StaticResource Locator}, Path=MainViewModel}"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <!--Panel.ZIndex avgör vilken komponent som ska ligga överst-->
        <local:WorkloadsView Grid.Column="1" Panel.ZIndex="1" />
        <local:AssignmentsView Grid.Column="1" Panel.ZIndex="2" />
        <local:PeopleView Grid.Column="1" Panel.ZIndex="2" />
    </Grid>
</Window>